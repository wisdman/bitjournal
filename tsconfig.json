{
  "compileOnSave": false,
  "compilerOptions": {
    "target":           "ESNext",
    "module":           "ESNext",
    "moduleResolution": "Node",

    "rootDir": ".",
    "baseUrl": ".",
    "outDir":  "/dev/null",

    "paths": {
      "@core/*": [ "./core/*" ],
      "@common/*": [ "./common/*" ]
    },

    "charset": "utf8",
    "newLine": "LF",
    "removeComments": true,
    "sourceMap": false,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "allowSyntheticDefaultImports": true,

    "alwaysStrict": true,
    "strict": true,

    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "skipLibCheck": true,

    "typeRoots": [
      "./node_modules/@types"
    ],

    "lib": [
      "DOM",
      "ES5",
      "ES2015",
      "ES2016",
      "ES2017",
      "ESNext"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}
